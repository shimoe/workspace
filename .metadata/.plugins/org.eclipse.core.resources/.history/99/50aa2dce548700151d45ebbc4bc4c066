#include "LPC13xx.h"
#include "gpio.h"
#include "vs-wrc103.h"
#include "ixbus.h"

void green(int n);
void green_and_orange(int t,int n);
void blink_for_ever(void);


int main(void)
{
	const unsigned short MainCycle = 60;
	Init(MainCycle);

	int t,n;

	t = 500;
	n = 5;

	green(n);
	return 0;
}

void green(int n){
	int i;
	for(i = 0;i < n;i++){
		LED(1);
		Wait(1000);
	}
}

void green_and_orange(int t,int n){
	int i;
	for(i = 0;i < n;i++){
		LED(1);
		Wait(t);
		LED(2);
		Wait(t);
	}
}
