#include "LPC13xx.h"
#include "gpio.h"
#include "vs-wrc103.h"
#include "ixbus.h"

int buzzer_time,rhythm;

buzzer_time = 400;
rhythm = 100;

void BassDo(){
	BuzzerSet(179, 100);
	BuzzerStart();
	Wait(buzzer_time);
	BuzzerStop();
	Wait(100);
}

void Re(){
	BuzzerSet(160, 100);
	BuzzerStart();
	Wait(buzzer_time);
	BuzzerStop();
	Wait(100);
}

void Mi(){
	BuzzerSet(142, 100);
	BuzzerStart();
	Wait(buzzer_time);
	BuzzerStop();
	Wait(100);
}

void Fa(){
	BuzzerSet(134, 100);
	    BuzzerStart();
	    Wait(buzzer_time);
	    BuzzerStop();
	    Wait(100);
}

void So(){
	BuzzerSet(120, 100);
	    BuzzerStart();
	    Wait(buzzer_time);
	    BuzzerStop();
	    Wait(100);
}

void Ra(){
	BuzzerSet(107, 100);
	    BuzzerStart();
	    Wait(buzzer_time);
	    BuzzerStop();
	    Wait(100);
}


int main(void)
{
	const unsigned short MainCycle = 60;
	Init(MainCycle);

	return 0;
}

